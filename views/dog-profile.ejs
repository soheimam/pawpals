<!DOCTYPE html>

<%- include('partials/head', { title: 'Dog profile' }) %>

<body>
  <%- include('partials/navigation') %>
  <div class="loader">
    <img src="/images/heart.svg">
  </div>
  <div class="flex-container">

    <section class="image-wrapper">
      <div class="photo">
        <img src="<%=dog.imageUrl %>" />
      </div>
      <%  if (dog.userId === user.id) { %>
        <div class="actions">
          <a href='/dog/<%= dog.id %>/edit'>Edit</a>
          <a href="#" class="toggle">Delete</a>
        </div>
        <%} %>
    </section>

    <section class="profile-text">
      <h1 class="stats">
        Hi my name is <span class="yellow"> <%=dog.name %> </span>
      </h1>


        <p class="stats">
          <font color="#ffbe51">I am from</font>
          <%= dog.user.region %>
        </p>
        <p class="stats">
            <font color="#ffbe51">I am a</font>
          <%= dog.age %> old
          <%= dog.gender %>
        </p>
        <p class="stats">
          <%= dog.breed %>
        </p>

      <p class="description">
        <%= dog.description %>
      </p>
  </section>

  </div>
</body>

  

<div id="deleteModal">
    <div class="wrapper">
      <h2>Are you sure you want to delete this dog?</h2>
      <a href="#" class="toggle">Never mind, close this shit</a>
      <form method="POST" action='/dog/<%= dog.id %>/delete'>
        <button type="submit">Go ahead, delete
          <%= dog.name %></button>
      </form>
    </div>
  </div>


<%- include('partials/footer') %>

<script type="text/javascript" src="/javascript/dogProfile.js"></script>
<script src="/javascript/loading.js"></script>
</body>

</html>