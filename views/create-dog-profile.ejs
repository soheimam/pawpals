<!DOCTYPE html>

<%- include('partials/form', { title: 'Create dog' }) %>

<body>
  <%- include('partials/navigation') %>
  <div class="container">
  <h1>Create your dog profile </h1>
  <form method="POST" action="/dog/new" autocomplete="off" enctype="multipart/form-data" class="form">
    <label for="dog-name"> Dog Name</label>
    <input type="text" id="dog-name" name="name" required>

    <label for="dog-breed"> Dog Breed</label>
    <select name="breed" id="breeds" required>
      <% breeds.forEach(b => { %>
      <option value="<%= b%>">
        <%= b%>
      </option>
      <% }) %>
    </select>

    <label for="dog-age">Dog Age </label>
    <input type="number" step="any" id="age" name="age" placeholder="age in years" required>

    <label for="dog-gender"> Dog Gender </label>
    <select name="gender" required>
      <option value="Female">Female</option>
      <option value="Male">Male </option>
    </select>

    <label for="description"> Description </label>
    <textarea id="description" name="description" required></textarea>

    <label for="upload">Upload an image of your dog</label>
    <input id="upload" name="file-upload" type="file" />
    <button type="submit" class="button">Create profile </button>

  </form>
</div>
  <%- include('partials/footer') %>
</body>

</html>