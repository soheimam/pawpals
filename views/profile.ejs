<!DOCTYPE html>

<%- include('partials/dashboard', { title: 'User profile' }) %>


<body>
  <%- include('partials/navigation') %>


  <div class="wrapper">
    <h1 class="block"> Welcome
     <span class="yellow"> <%= userSession.firstname %> </span>
    </h1>
    <div class="grid">

      <div class="square edit"><a href='/dog/messages'>
          <h3>Edit profile</h3>
        </a>

      </div>
      <%  if (dogs.length) { %>
      <div class="square messages"><a href='/dog/messages'>
          <h3>Messages</h3>
        </a></div>

      <div class="square matches">
        <h3>Matches</h3>
      </div>

      <% dogs.map(dog => { %>
      <div class="square profile" style="background-image: url(<%= dog.imageUrl %>); background-repeat: no-repeat; background-position:center center; background-size:cover; opacity: 0.5;">
        <h3>
          <%= dog.name %></h3>

      </div>
      <% }) %>
      <% } else { %>
      <div class="square"> <a href='/dog/new'><h3>Add dog profile</h3></a>

      </div>
      <% } %>

      <div class="square search">
          <a href='/dogs'><h3>Search
        </h3></a>
      </div>
      
  </div>


    <%- include('partials/footer') %>
</body>

</html>